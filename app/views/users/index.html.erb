<h1>Users:<h1>
<%= link_to 'Add User', new_user_path %>
<br>
<br>
  <table>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>

    <% @user.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= link_to 'Books', user_path(user) %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Delete', user_path(user), method: :delete,
        data: { confirm: 'Are you sure?' } %>
      </tr>
    <% end %>
  </table>
